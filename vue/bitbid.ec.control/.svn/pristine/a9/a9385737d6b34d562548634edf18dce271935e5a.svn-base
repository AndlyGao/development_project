<template>
  <div id="consume-statis-page"  class="cont-view">
    <!-- 面包屑区域start -->
    <div class="bread-box">
      <el-breadcrumb separator="/">
        <el-breadcrumb-item :to="{ path: '/' }">首页</el-breadcrumb-item>
        <el-breadcrumb-item><a href="/">成交管理</a></el-breadcrumb-item>
        <el-breadcrumb-item><a href="/">采购人消费统计</a></el-breadcrumb-item>
      </el-breadcrumb>
    </div>
    <!-- 面包屑区域end -->
    <!-- 搜索区域start -->
    <div class="search-box">
      <el-row :gutter="20">
        <el-form :model="searchForm" label-width="110px" class="demo-ruleForm">
          <el-col :span="5">
            <el-form-item label="电商平台名称:">
              <el-select v-model="searchForm.ecPlatformId" clearable placeholder="请选择">
                <el-option
                  v-for="item in ecPlatformList"
                  :key="item.id"
                  :label="item.userName"
                  :value="item.id">
                </el-option>
              </el-select>
            </el-form-item>
          </el-col>
          <el-col :span="5">
            <el-form-item label="采购人:">
              <el-input v-model="searchForm.buyName" placeholder="采购人"></el-input>
            </el-form-item>
          </el-col>
          <el-col :span="7">
            <el-form-item label="统计时间:">
              <el-date-picker
                @change="changeStatisTime"
                style="width:260px;"
                v-model="searchForm.time"
                type="daterange"
                range-separator="至"
                start-placeholder="开始日期"
                end-placeholder="结束日期">
              </el-date-picker>
            </el-form-item>
          </el-col>
          <el-col :span="2">
            <el-button type="primary" @click="onSearch">查询</el-button>
          </el-col>
        </el-form>
      </el-row>
    </div>
    <!-- 搜索区域end -->
    <div class="table-box">
      <div class="expot-btn">
        <el-button size="small" type="primary" @click="exportExcel">导出 Excel</el-button>
      </div>
      <el-table
        :data="tableData"
        border
        style="width: 100%">
        <el-table-column
          label="序号"
          type="index"
          width="60"
          :index="computedIndex"
          align="center">
        </el-table-column>
        <el-table-column
          prop="buyName"
          label="采购人"
          :formatter="simpleFormatData"
          align="center">
        </el-table-column>
        <el-table-column
          prop="ecPlatform"
          label="电商管理平台"
          :formatter="simpleFormatData"
          align="center">
        </el-table-column>
        <el-table-column
          prop="countNumber"
          label="成交订单数"
          align="center">
          <template slot-scope="scope">
            <el-button
              @click.native.prevent="jumpDetailsListPage(scope.$index, scope.row)"
              type="text"
              size="small">
              {{scope.row.countNumber}}
            </el-button>
          </template>
        </el-table-column>
        <el-table-column
          prop="countMoney"
          label="成交订单金额"
          :formatter="simpleFormatData"
          align="center">
        </el-table-column>
      </el-table>
      <div class="pagination-box">
        <!--分页-->
        <el-pagination
          background
          layout="prev, pager, next"
          :total="page.total"
          :page-size='page.pageSize'
          :current-page.sync="page.currentPage"
          @current-change="handlePage"
          @next-click="handlePage">
        </el-pagination>
        <!--分页-->
      </div>
    </div>
  </div>
</template>
<script>
import {transactionRecord, complain} from '@/api'
import {exportProcurExcel} from '@/assets/js/common'
export default {
  name: 'consume-statis',
  data () {
    return {
      searchForm: {},
      ecPlatformList: [],
      tableData: [],
      page: {
        total: 0,
        pageSize: 10,
        currentPage: 1
      },
      startTime: null,
      endTime: null
    }
  },
  methods: {
    changeStatisTime (time) {
      if (time) {
        this.startTime = time[0]
        this.endTime = time[1]
      }
    },
    /** 搜索 */
    onSearch () {
      this.getTableData()
    },
    /** 导出excel */
    exportExcel () {
      window.open(`${exportProcurExcel}`)
      let id = this.searchForm.ecPlatformId
      let buyId = this.searchForm.buyName
      if (id !== null && id !== undefined) {
        window.open(`${exportProcurExcel}?electricityId=${id}`)
      } else if (buyId !== null && buyId !== undefined) {
        window.open(`${exportProcurExcel}?messageLike=${buyId}`)
      } else if (this.startTime !== null && this.endTime !== null) {
        let STime = this.formatDate(null, null, this.startTime)
        let ETime = this.formatDate(null, null, this.endTime)
        window.open(`${exportProcurExcel}?startCountTime=${STime}&endCountTime=${ETime}`)
      } else {
        window.open(`${exportProcurExcel}`)
      }
    },
    /** 分页 */
    handlePage (nowNum) {
      this.page.currentPage = nowNum
      this.page.pageNo = (nowNum - 1) * this.page.pageSize
      this.getTableData()
    },
    /** 跳转到详情列表页 */
    jumpDetailsListPage (index, row) {
      // console.log(row)
      this.$router.push({path: '/index/consume-statis-list', query: {ecPlatformId: row.ecPlatformId, buyer: row.buyer}})
    },
    /** 获得列表数据 */
    getTableData () {
      let query = {
        pageNo: this.page.pageNo,
        pageSize: this.page.pageSize,
        messageLike: this.searchForm.buyName,
        ecPlatformId: this.searchForm.ecPlatformId,
        startCountTime: this.startTime || null,
        endCountTime: this.endTime || null
      }
      transactionRecord.getProcurementList(query).then(res => {
        this.tableData = res.data.transactionRecordList.list
      })
    },
    /** 获得电商平台名称 */
    merchantName () {
      complain.merchantName().then(res => {
        this.ecPlatformList = res.data.users
      })
    },
    /** 普通格式化数据，空的时候展示"---" */
    simpleFormatData (row, col, cellValue) {
      return cellValue || '-----'
    },
    /** 序号计算 */
    computedIndex (index) {
      return index + (this.page.currentPage - 1) * this.page.pageSize + 1
    }
  },
  mounted () {
    this.getTableData()
    this.merchantName()
  }
}
</script>
<style lang="less">
#consume-statis-page {
  .expot-btn {
    padding-bottom: 10px;
    text-align: right;
  }
}
</style>
