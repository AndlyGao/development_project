<template>
  <div id="rotate-add" class="smaincontent">
    <div class="headertitle">
      <!--面包屑-->
      <el-breadcrumb separator="/">
        <el-breadcrumb-item :to="{ path: '/main' }">首页</el-breadcrumb-item>
        <el-breadcrumb-item>首页管理</el-breadcrumb-item>
        <el-breadcrumb-item :to="{ path: '/index/home-manage/friendship-link' }">友情链接</el-breadcrumb-item>
        <el-breadcrumb-item>添加友情链接</el-breadcrumb-item>
      </el-breadcrumb>
      <div class="returnboxbig">
        <template>
          <el-button @click="$router.go(-1)">返回</el-button>
        </template>
      </div>
      <!--面包屑-->
    </div>
    <div class="contentbigbox">
      <el-form :model="ruleForm" :rules="rules" ref="ruleForm" label-width="100px" class="demo-ruleForm">
        <el-form-item label="名称:" prop="title">
          <el-input v-model="ruleForm.title" style="width:300px"></el-input>
        </el-form-item>
        <el-form-item label="链接:" prop="url">
          <el-input v-model="ruleForm.url" style="width:300px"></el-input>
        </el-form-item>
        <el-form-item label="类型:" prop="linkType">
          <el-select v-model="ruleForm.linkType" class="select">
            <el-option
              v-for="item in typeOptions"
              :key="item.value"
              :label="item.label"
              :value="item.value">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="备注:" prop="remarks">
          <el-input
            v-model="ruleForm.remarks"
            type="textarea"
            :rows="4">
          </el-input>
        </el-form-item>
        <el-form-item>
          <el-button type="primary" @click="submitForm('ruleForm')">确 定</el-button>
          <el-button @click="$router.go(-1)">取 消</el-button>
        </el-form-item>
      </el-form>
    </div>
  </div>
</template>
<script>
import upLoadFile from '@/components/upload/publicFileUpload'
import { friendlyLink } from '@/api'
import {links} from '../../../assets/js/validate'
export default {
  data () {
    // 网址验证
    let validUrl = (rule, value, callback) => {
      if (!value) {
        callback(new Error('请填写URL地址'))
      } else if (!links(value)) {
        callback(new Error('请输入正确的URL地址'))
      } else {
        callback()
      }
    }
    return {
      // 类型
      typeOptions: [
        {
          value: 1,
          label: '政府机构'
        },
        {
          value: 2,
          label: '行业'
        },
        {
          value: 3,
          label: '协会'
        },
        {
          value: 4,
          label: '单位'
        }
      ],
      ruleForm: {},
      rules: {
        title: [
          { required: true, message: '请填写名称', trigger: 'blur' },
          { min: 1, max: 256, message: '长度在 1到 256 个字符', trigger: 'blur' }
        ],
        url: [
          { required: true, message: '请填写链接', trigger: 'blur' },
          { validator: validUrl, trigger: ['blur', 'change'] }
        ],
        linkType: [
          {required: true, message: '请选择类型', trigger: 'change'}
        ]
      },
      fileType: '',
      oldFileName: '',
      isImage: '0'
    }
  },
  components: {
    upLoadFile
  },
  methods: {
    submitForm (name) {
      this.$refs[name].validate((valid) => {
        if (valid) {
          this.ruleForm.type = 9
          this.ruleForm.isEnabled = 1
          friendlyLink.save(this.ruleForm).then((res) => {
            this.$router.push({path: '/index/home-manage/friendship-link'})
          })
        } else {
          return false
        }
      })
    }
  },
  mounted () {
  }
}
</script>
<style lang="less">
  #rotate-add {
    .contentbigbox .demo-ruleForm {
      .el-form-item__content {
        text-align: left;
      }
      .btns {
        margin-top: 0;
      }
    }
  }
