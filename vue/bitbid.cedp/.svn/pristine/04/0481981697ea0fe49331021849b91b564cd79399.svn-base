<script>
export default {
  data () {
    return {
      searchForm: {
        priceStart: null,
        priceEnd: null
      },
      // 默认选中
      addrSelected: null,
      projectStatusOption: [
        {
          name: '全部',
          num: 12,
          code: '0'
        },
        {
          name: '发布中',
          num: 12,
          code: '1'
        },
        {
          name: '已截止',
          num: 12,
          code: '2'
        },
        {
          name: '已完成',
          num: 12,
          code: '3'
        }
      ],
      curName: '项目列表',
      draftFlag: false,
      tableData: [
        {
          status: 0
        },
        {
          status: 1
        },
        {
          status: 2
        }
      ],
      page: {
        pageNo: 10,
        pageSize: 20,
        total: 200
      }
    }
  },
  methods: {
    search () {
      if (this.validatePrice()) {
      }
    },
    reset () {},
    /**
     * 验证项目预算
     * @returns {boolean}
     */
    validatePrice () {
      let start = Number(this.searchForm.priceStart)
      let end = Number(this.searchForm.priceEnd)
      if ((start !== 0 || end !== 0) && start > end) {
        this.$message({
          type: 'warning',
          message: '结束价格不能小于开始价格'
        })
        return false
      }
      return true
    },
    handleDraftClick (value) {
      this.draftFlag = value
      this.curName = value ? '草稿箱' : '项目列表'
    },
    handleAdd () {
      this.$router.push({path: `/projectExecute/directPurchase/add`})
    },
    handleDraftEditBtn (scope) {
      this.$router.push({path: `/projectExecute/directPurchase/update`})
    },
    handleDraftDelBtn (scope) {
      this.$confirm('确认删除吗?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'error'
      }).then(() => {
      }).catch(() => {
        return false
      })
    },
    handleProjectBtn (scope) {
      this.$router.push({path: `/projectExecute/directPurchase/detail/${scope.row.code}`})
    },
    handleOfferBtn (scope) {
      this.$router.push({path: `/projectExecute/directPurchase/offer`})
    },
    handleRecallBtn (scope) {
      this.$confirm('确认撤回吗?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'error'
      }).then(() => {
      }).catch(() => {
        return false
      })
    },
    handleDelBtn (scope) {
      this.$confirm('确认删除吗?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'error'
      }).then(() => {
      }).catch(() => {
        return false
      })
    },
    // 分页
    handleCurrentChange (nowNum) {
      this.page.currentPage = nowNum
      this.page.pageNo = (nowNum - 1) * this.page.pageSize
    },
    handleSizeChange (size) {
      this.page.pageSize = size
    },
    // 点击切换搜索
    chooseAddr (index, item) {
      this.addrSelected = index
      this.searchForm.status = item.code
    }
  }
}
</script>

