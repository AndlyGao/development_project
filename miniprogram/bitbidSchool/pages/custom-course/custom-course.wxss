@import "../item-teacher/item-teacher.wxss";

.root {
  position: relative;
}

/* 1. 选项卡 */  
.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #f1f1f1;  /* 设置选项卡下边框的样式 */
  text-align: center;
  line-height: 80rpx;
  position:fixed;
  top:0rpx;
  left:0rpx;
  z-index:9000;
  background-color:white;
}

/* 1.1. 选项卡中的子选项 */  
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block; 
  width: 25%;
  color: #666;  
}

/* 1.2. 子选项被选中时的样式 */
.on {
  color: #ffd000;  
  border-bottom: 5rpx solid #fec710;  
}

.teacher {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.tab-content {
  width: 100%;
  margin-top:86rpx;
  overflow: auto;
}

.list {
  width: 100%;
  overflow: auto;
}

.line {
  height: 2rpx;
  background-color: #eaeaea;
}

.list-no-data {
  padding: 24rpx;
  box-sizing: border-box;
}

