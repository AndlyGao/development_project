.record-item {
  width: 100%;
  display: flex;
  background: white;
  margin: 0 auto;
  padding: 24rpx;
  flex-direction: row;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.record-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.record-item .content {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.record-item-name {
  color: #333;
  line-height: 46rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.record-item-record {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}