/* pages/course-dialog/course-dialog.wxss */
.root {
  position:fixed;
  width: 100%;
  height: 100%;
  top:0px;
  background-color:rgba(0,0,0,0.5);
  text-align: center;
  overflow: hidden;
  z-index: 9999;
}

.dialog .close {
  width: 51rpx;
  height: 51rpx;
  position: absolute;
  top: -90rpx;
  right: -70rpx;
}

.dialog {
  width: 75%;
  height: 820rpx;
  background-color: white;
  border-radius: 10rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.dialog .top-box {
  width: 100%;
  height: 88rpx;
  position: relative;
}

.dialog .top {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
}
.dialog .top-bg {
  width: 100%;
  height: 88rpx;
}

.dialog .top image {
  width: 50rpx;
  height: 45rpx;
}

.dialog .top text {
  color: white;
  font-size: 30rpx;
  line-height: 45rpx;
  text-align: left;
  padding: 0 20rpx;
  box-sizing: border-box;

}

.dialog .hint {
  width: 100%;
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 16rpx;
}

.dialog .input-view {
  display: flex;
  flex-direction: row;
  justify-items: center;
  border: 1px solid #ddd;
  padding: 16rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  border-radius:10rpx; 
}

.dialog .input-view image {
  width: 36rpx;
  height: 40rpx;
  text-align: center;
}

.dialog .input-view input {
  width:100%;
  color: #a6a6a6;
  font-size: 28rpx;
  text-align: left;
  line-height: 40rpx;
  margin-left: 24rpx;
}

.dialog button {
  width: 160rpx;
  height: 60rpx;
  color: white;
  font-size: 28rpx;
  background-color: #fec810; 
  border-radius: 16rpx; 
  text-align: center;
  line-height: 60rpx;
  margin-top: 60rpx;
}

.success-dialog {
  width: 418rpx;
  height: 480rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
}

.success-dialog .close {
  width: 51rpx;
  height: 51rpx;
  position: absolute;
  top: -20rpx;
  right: -50rpx;
}

.success-dialog .top {
  width: 418rpx;
  height: 213rpx;
}

.success-dialog view {
  height: 260rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-bottom-left-radius: 28rpx;
  border-bottom-right-radius:28rpx;
  /* margin-top: -20rpx; */
}

.success-dialog view text {
  color: #fb8c3c;
  font-size: 32rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.success-dialog view button {
  width: 180rpx;
  height: 60rpx;
  color: white;
  font-size: 28rpx;
  background-color: #fec810; 
  border-radius: 16rpx; 
  text-align: center;
  line-height: 60rpx;
}