/* pages/project/detail/index.wxss */
.title-box {
  width: 100%;
  background-color: #fff;
  padding: 26rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
  font-size: 32rpx;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #f3f4f8;
}

.title-box .left-line {
  background-color: #008eff;
  height: 30rpx;
  width: 8rpx;
  border-radius: 4rpx 4rpx;
  margin-right: 20rpx;
}
.project-conbigbox{
  width: 100%;
  padding: 0 22rpx;
  box-sizing: border-box;
  background: #fff;
  padding-bottom: 38rpx;
  padding-top: 28rpx;
}
.project-conbox{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 28rpx;
}
.project-conbox text:nth-child(1){
  min-width: 130rpx;
  height: 34rpx;
  white-space: nowrap;
  display: inline-block;
  vertical-align: top;
}
.process-bigbox{
  width: 100%;
  padding: 0 22rpx;
  box-sizing: border-box;
  background: #fff;
  padding-top: 72rpx;
}
.process-box{
  width: 100%;
  display: flex;
  flex-direction: row;
}
/* .top-process-box{
  
} */
.number-process{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background: #008eff;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
}
.title-process-box {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin: 16rpx 0;
}
.title-process-box-bg {
  background: #eee;
}
