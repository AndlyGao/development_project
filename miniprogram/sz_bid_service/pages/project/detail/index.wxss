.process-rightbox{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.title-process{
  flex: 1;
  font-size: 30rpx;
  height: 40rpx;
  color: #666666;
  padding-right:30rpx;
}
.title-process image {
  width: 36rpx;
  height: 18rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.time-process{
  color: #999999;
  font-size: 24rpx;
  line-height: 1.6em;
  text-align: right
}
.process-leftbox{
  padding-top: 16rpx;
  box-sizing: border-box;
  margin-right: 16rpx;
}
.process-leftbox .line{
  width: 2rpx;
  height: 100%;
  margin: 0 auto;
  background: #999999;
}
.bottom-process-rightbox{
  display: inline-block;
  font-size: 26rpx;
  color: #008eff;
  vertical-align: top;
  margin-top: 44rpx;
}
.number-process-end{
  background: #999999;
}
.no-process-info{
  color: #999999;
  font-size: 32rpx;
  text-align: center;
  padding-bottom: 40rpx;
}