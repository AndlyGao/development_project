/**app.wxss**/
.container-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f3f4f8;
  /* 滚动条显示 */
  /* overflow: hidden; */
}
/** wx-scroll-view 组件本身已支持 flex 特性 **/
.container-scroll {
  height: 100%;
  background-color: #f3f4f8;
  /* 滚动条显示 */
  overflow: hidden;
}
.content {
  flex: 1;
}
