<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="220dp"
    android:background="@drawable/shape_sampling_result_background"
    android:gravity="center"
    android:layout_height="135dp">

    <ImageView
        android:layout_width="60dp"
        android:src="@mipmap/shibai"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_hint"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/col_font_big"
        />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_sampling_fail"
            android:textSize="12sp"
            android:textColor="@color/col_font_middle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新打印！"
            android:textSize="12sp"
            android:textColor="#5281ff"
            />
    </LinearLayout>

</LinearLayout>