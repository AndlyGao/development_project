<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="107dp"
        android:layout_height="75dp"
        android:background="@mipmap/beijing"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_show_account_name"/>
        <TextView
            android:id="@+id/p_show_account_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv1"
            android:layout_marginLeft="8dp"
            android:maxEms="4"
            android:textSize="13sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/col_show_account_txt"
            android:gravity="center"
            android:text="张先生"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E0E0E0"/>
    <RelativeLayout
        android:id="@+id/p_show_account_password_update"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_show_account_password_update" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv2"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/col_show_account_txt"
            android:text="修改密码"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>