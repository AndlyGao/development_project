<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@mipmap/chatou" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv1"
            android:src="@mipmap/connect" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv2"
            android:src="@mipmap/dianqi" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:text="请连接检测设备"
        android:textColor="@color/col_font_big"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/act_serial_port_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="我已连接"
        android:textColor="#2DC36F"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_gravity="center"
        android:text="请检查您的PDA与设备是否连接,连接成功后请勿拔动数据线,以免数据传输不稳定。"
        android:textColor="@color/col_font_middle"
        android:textSize="15sp" />
</LinearLayout>