<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/mima" />


        <EditText
            android:id="@+id/act_password_update_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:gravity="bottom"
            android:hint="@string/str_password_old"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:textColor="@color/col_login_input_txt_on"
            android:textColorHint="@color/col_login_input_txt_off"
            android:textSize="15sp">

        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/col_login_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/mima" />


        <EditText
            android:id="@+id/act_password_update_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:gravity="bottom"
            android:hint="@string/str_password_new"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:textColor="@color/col_login_input_txt_on"
            android:textColorHint="@color/col_login_input_txt_off"
            android:textSize="15sp">

        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/col_login_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/mima" />


        <EditText
            android:id="@+id/act_password_update_new_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:gravity="bottom"
            android:hint="@string/str_password_new_confirm"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:textColor="@color/col_login_input_txt_on"
            android:textColorHint="@color/col_login_input_txt_off"
            android:textSize="15sp">

        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/col_login_line" />

    <Button
        android:id="@+id/act_password_update_confirm"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="33dp"
        android:text="@string/str_password_confirm"
        android:textColor="#FFFFFF"
        android:background="@drawable/login_btn_shape"
        android:textSize="17sp"
        />

</LinearLayout>