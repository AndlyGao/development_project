<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="220dp"
    android:background="@drawable/shape_sampling_result_background"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView

        android:layout_marginTop="8dp"
        android:layout_width="60dp"
        android:src="@mipmap/shengqi"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_hint"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/col_font_big"
        />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/dia_hint_fail_hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/str_sampling_fail"
            android:textColor="@color/col_font_middle"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/dia_hint_fail_confirm"
        android:layout_width="88dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/col_main_blue"
        android:background="@drawable/shape_hint_confirm_background"
        android:text="@string/str_exit_login_on"
        android:layout_marginBottom="8dp"
        android:layout_height="30dp" />

</LinearLayout>