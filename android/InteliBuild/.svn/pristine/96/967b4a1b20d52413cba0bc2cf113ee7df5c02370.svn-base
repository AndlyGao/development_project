<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="80dp"
    android:background="@drawable/shape_wait_background"
    android:gravity="center"
    android:layout_height="85dp">
    <com.bibinet.intelibuild.project.view.custom.WaitView
        android:id="@+id/dia_wait"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/dia_wait_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_wait"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

</LinearLayout>