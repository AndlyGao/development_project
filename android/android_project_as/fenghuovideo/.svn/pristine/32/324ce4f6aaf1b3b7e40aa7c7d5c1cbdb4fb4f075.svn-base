<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/article_more_content"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/article_setting_bg_value" >

        <LinearLayout
            android:id="@+id/article_more_share_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/article_more_share_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/weixin_"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="#222222"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/article_more_share_pyq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/pengyouquan_"
                    android:gravity="center"
                    android:text="朋友圈"
                    android:textColor="#222222"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/article_more_share_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/weibo_"
                    android:gravity="center"
                    android:text="微博"
                    android:textColor="#222222"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/article_more_share_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/qq_"
                    android:gravity="center"
                    android:text="QQ"
                    android:textColor="#222222"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/article_more_cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/article_more_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="取消分享"
                android:textColor="#222222"
                android:textSize="17sp" />

            <View
                android:id="@+id/article_more_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignTop="@id/article_more_cancel"
                android:background="#dddddd" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/article_more_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/article_more_content"
        android:background="@color/half_transparent" />

</RelativeLayout>