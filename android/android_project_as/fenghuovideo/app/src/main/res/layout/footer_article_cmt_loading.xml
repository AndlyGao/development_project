<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <LinearLayout
        android:id="@+id/footer_loading_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ProgressBarStyleblue"
            android:layout_centerInParent="true"
            android:indeterminateDuration="800"
            android:indeterminateDrawable="@drawable/progress_article_cmt_footer_loading"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/footer_loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:text="正在载入..."
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/about_ver"
            android:textSize="14dp" />
    </LinearLayout>


</RelativeLayout>
