<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_choice_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/alert_windowsbg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/single_choice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dip"
        android:background="@drawable/common_transparent"
        android:gravity="center"
        android:textColor="@color/main_single_choice_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/single_choice_line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/alert_windows_line" />

    <ListView
        android:id="@+id/single_choice_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:divider="@drawable/alert_windows_line" />

    <!-- <ImageButton -->
