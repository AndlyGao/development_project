<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/header_exclusive_detail_face"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/common_horizontal_margin"
        android:scaleType="centerCrop"
        />
        <TextView 
            android:id="@+id/header_exclusive_detail_info"
            android:layout_width="match_parent"
   	 		android:layout_height="wrap_content"
   	 		android:textSize="16sp"
   	 		android:layout_alignTop="@+id/header_exclusive_detail_face"
   	 		android:layout_toRightOf="@+id/header_exclusive_detail_face"
   	 		android:layout_marginRight="@dimen/common_horizontal_margin"
   	 		android:text="栏目简介"
   	 		android:textColor="?attr/article_title_value"
            />
        <TextView 
            android:id="@+id/header_exclusive_detail_info_content"
            android:layout_width="match_parent"
   	 		android:layout_height="wrap_content"
   	 		android:layout_below="@+id/header_exclusive_detail_info"
   	 		android:layout_above="@+id/header_exclusive_detail_time"
   	 		android:layout_marginRight="@dimen/common_horizontal_margin"
   	 		android:layout_marginTop="4dp"
   	 		android:layout_marginBottom="4dp"
   	 		android:layout_alignLeft="@+id/header_exclusive_detail_info"
   	 		android:textSize="12sp"
   	 		android:textColor="?attr/article_time_value"
   	 		android:lineSpacingExtra="@dimen/common_item_title_line_space"
   	 		android:maxLines="4"
   	 		android:ellipsize="end"
            />
        <TextView 
            android:id="@+id/header_exclusive_detail_time"
            android:layout_width="match_parent"
   	 		android:layout_height="wrap_content"
   	 		android:layout_marginRight="@dimen/common_horizontal_margin"
   	 		android:textSize="14sp"
   	 		android:layout_alignBottom="@+id/header_exclusive_detail_face"
   	 		android:layout_alignLeft="@+id/header_exclusive_detail_info"
   	 		android:textColor="?attr/article_title_value"
            />
        
        <View 
            android:layout_width="match_parent"
   	 		android:layout_height="@dimen/channel_item_divider_height"
   	 		android:background="?attr/item_divider_color_value"
   	 		android:layout_below="@+id/header_exclusive_detail_face"
            />

</RelativeLayout>
