<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent"
        android:padding="30dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reward_dialog_bg"
            android:layout_centerInParent="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reward_dialog_top_bg"
                    android:src="@drawable/reward_dialog_top_src" />

                <LinearLayout
                    android:id="@+id/reward_dialog_price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:divider="@drawable/space_reward_dialog"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:showDividers="middle" >
                </LinearLayout>

                <Button
                    android:id="@+id/reward_btn_pay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/reward_dialog_price_ll"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/reward_dialog_bottom_btn_bg"
                    android:text="微信支付"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/reward_dialog_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/reward_dialog_close" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>