<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/common_bg_value" >

    <include
        android:id="@+id/title_bar_layout"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar_layout"
        android:layout_centerInParent="true"
        android:background="?attr/common_bg_gray_value"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="40dp" >

        <ImageView
            android:id="@+id/ci_iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_account" />

        <EditText
            android:id="@+id/ci_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:drawableLeft="@drawable/icon_account"
            android:drawablePadding="10dp"
            android:hint="@string/please_input_nickname"
            android:singleLine="true"
            android:textColor="?attr/article_title_value"
            android:textSize="16sp" />

        <View
            style="@style/SettingDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/ci_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="@string/set_password"
            android:singleLine="true"
            android:textColor="?attr/article_title_value"
            android:textSize="16sp" />

        <View
            style="@style/SettingDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/ci_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/nextstep"
            android:textColor="@color/login_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ci_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="注册代表你同意《应用使用协议》"
            android:textColor="?attr/article_title_value" >
        </TextView>
    </LinearLayout>

</RelativeLayout>