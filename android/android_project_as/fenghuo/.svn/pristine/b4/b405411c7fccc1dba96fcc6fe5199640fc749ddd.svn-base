<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/common_item_bg_white_state_value" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp" >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin" />

        <ImageView
            android:id="@+id/user_vip_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/user_image"
            android:layout_alignRight="@id/user_image" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="名字"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <View
            style="@style/SettingDivider"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp" />
    </RelativeLayout>

</LinearLayout>