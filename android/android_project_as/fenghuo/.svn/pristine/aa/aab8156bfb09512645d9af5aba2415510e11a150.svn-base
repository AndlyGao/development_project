<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_comment_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/photopage_comment_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent" >

        <View
            android:id="@+id/photopage_comment_bottom_toolbar_divider"
            android:layout_width="match_parent"
            android:layout_height="0px"/>

        <ImageButton
            android:id="@+id/photopage_comment_bottom_toolbar_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/article_comment_bottom_toolbar_divider"
            android:background="@color/transparent"
            android:src="@drawable/tuwen_share"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/photopage_comment_bottom_toolbar_fav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/photopage_comment_bottom_toolbar_divider"
            android:layout_toLeftOf="@id/photopage_comment_bottom_toolbar_share"
            android:background="@color/transparent"
            android:src="@drawable/tuwen_bottom_fav_state" />

        <ImageButton
            android:id="@+id/photopage_comment_bottom_toolbar_comment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/article_comment_bottom_toolbar_divider"
            android:layout_toLeftOf="@+id/photopage_comment_bottom_toolbar_fav"
            android:background="@color/transparent"
            android:src="@drawable/tuwen_comment" />

        <TextView
            android:id="@+id/photopage_comment_bottom_toolbar_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/photopage_comment_bottom_toolbar_comment"
            android:layout_alignTop="@id/photopage_comment_bottom_toolbar_comment"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/xinxi_"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="11"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/photopage_comment_bottom_toolbar_input"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toLeftOf="@+id/photopage_comment_bottom_toolbar_comment"
            android:background="#27ffffff"
            android:drawableLeft="@drawable/tuwen_xiepinglun_icon"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="写评论..."
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>