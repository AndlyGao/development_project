apply plugin: 'com.android.application'

android {
    signingConfigs {
        release {
            keyAlias 'com.chengning.fenghuo'
            keyPassword 'shenyuan'
            storeFile file('E:/work/Apk/shenyuan_keystore.keystore')
            storePassword 'shenyuan'
        }
    }
    compileSdkVersion 25
    buildToolsVersion '25.0.0'

    aaptOptions.cruncherEnabled = false
    aaptOptions.useNewCruncher = false
    
    defaultConfig {
        applicationId "com.chengning.fenghuo"
        minSdkVersion 11
        targetSdkVersion 19
        multiDexEnabled true
    }
    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.txt'
            signingConfig signingConfigs.release
        }
        debug {
            signingConfig signingConfigs.release
        }
    }
    dexOptions {
        javaMaxHeapSize "2g"
    }

    lintOptions {
        checkReleaseBuilds false
        abortOnError false
        disable 'LongLogTag'
    }

}

dependencies {
    compile 'com.android.support:multidex:1.0.0'
    compile project(':leancloudpush')
    compile project(':shortcutBadger')
    compile project(':ali_feedback')
    compile project(':ali_securityguard')
