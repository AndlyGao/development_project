<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
         android:id="@+id/directorate_login_ll"
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:paddingRight="12dp"
         android:paddingLeft="@dimen/common_horizontal_margin"
         android:background="?attr/common_item_bg_white_state_value"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            
            >

            <TextView
                android:id="@+id/item_directorate_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/myContentTextStyle"
                />

            <TextView
                android:id="@+id/item_directorate_task_complete_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/myContentTextStyle"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>

         <TextView
             android:id="@+id/item_directorate_task_complete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="@style/myCompleteTextStyleRed"
             />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/list_icon" />
          
     </LinearLayout>

</RelativeLayout>
