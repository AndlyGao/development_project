<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/message_at_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/common_item_bg_white_state_value" >

        <ImageView
            android:id="@+id/message_at_icon_imageview"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/xiaoxi_at_icon" />

        <ImageView
            android:id="@+id/message_at_detail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:src="@drawable/list_icon" />

        <TextView
            android:id="@+id/message_at_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toRightOf="@+id/message_at_icon_imageview"
            android:text="@string/message_at_me"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/message_at_red"
            android:layout_width="@dimen/red_dot_height"
            android:layout_height="@dimen/red_dot_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="?attr/item_divider_color_value" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_comment_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/common_item_bg_white_state_value" >

        <ImageView
            android:id="@+id/message_comment_icon_imageview"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/xiaoxi_pinglun_icon" />

        <TextView
            android:id="@+id/message_comment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toRightOf="@+id/message_comment_icon_imageview"
            android:text="评论"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/message_comment_detail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:src="@drawable/list_icon" />

        <TextView
            android:id="@+id/message_comment_red"
            android:layout_width="@dimen/red_dot_height"
            android:layout_height="@dimen/red_dot_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="?attr/item_divider_color_value" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_like_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/common_item_bg_white_state_value" >

        <ImageView
            android:id="@+id/message_like_icon_imageview"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/xiaoxi_zan_icon" />

        <ImageView
            android:id="@+id/message_like_detail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:src="@drawable/list_icon" />

        <TextView
            android:id="@+id/message_like_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toRightOf="@+id/message_like_icon_imageview"
            android:text="赞"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/message_like_red"
            android:layout_width="@dimen/red_dot_height"
            android:layout_height="@dimen/red_dot_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="?attr/item_divider_color_value" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_fans_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/common_item_bg_white_state_value" >

        <ImageView
            android:id="@+id/message_fans_icon_imageview"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/xiaoxi_newfans_icon" />

        <ImageView
            android:id="@+id/message_fans_detail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:src="@drawable/list_icon" />

        <TextView
            android:id="@+id/message_fans_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toRightOf="@+id/message_fans_icon_imageview"
            android:text="新粉丝"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/message_fans_red"
            android:layout_width="@dimen/red_dot_height"
            android:layout_height="@dimen/red_dot_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="?attr/item_divider_color_value" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_chat_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?attr/common_item_bg_white_state_value" >

        <ImageView
            android:id="@+id/message_chat_icon_imageview"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/xiaoxi_liaotian_icon" />

        <ImageView
            android:id="@+id/message_chat_detail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:src="@drawable/list_icon" />

        <TextView
            android:id="@+id/message_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:layout_toRightOf="@+id/message_chat_icon_imageview"
            android:text="聊天"
            android:textColor="?attr/item_title_color_value"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/message_chat_red"
            android:layout_width="@dimen/red_dot_height"
            android:layout_height="@dimen/red_dot_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="?attr/item_divider_color_value" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>