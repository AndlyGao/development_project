        <RelativeLayout
            android:id="@+id/me_common_message_rl"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="?attr/common_item_bg_white_state_value">

            <TextView
                style="@style/SettingChildText"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="我的消息" />

            <ImageView
                android:id="@+id/me_common_message_red"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/me_common_message_boult"
                android:background="@drawable/tips_bg25"
