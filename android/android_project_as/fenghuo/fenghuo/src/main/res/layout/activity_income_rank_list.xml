<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/my_income_money_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_horizontal_margin"
            android:src="@drawable/nav_back_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_income_ranking_list_rl"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="@color/my_income_money_color"
        android:paddingLeft="45dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/fenghuo_ranking_list_img"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入排行榜"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="注册即送1元现金"
                android:textColor="#f3afab"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fenghuo_ranking_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/wodeshouru_ph_pic" />

    </RelativeLayout>

</LinearLayout>
