<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pwdmodify_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_value"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar_layout"
        layout="@layout/title_bar" />

    <TextView
        android:id="@+id/tv_fromAbulm"
        style="@style/SettingChildText"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/common_item_bg_white_state_value"
        android:text="从手机相册选择" />

    <View android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/common_horizontal_margin"
        android:background="?attr/item_divider_color_value" />

    <TextView
        android:id="@+id/tv_fromCamera"
        style="@style/SettingChildText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/common_item_bg_white_state_value"
        android:text="拍一张" />

</LinearLayout>