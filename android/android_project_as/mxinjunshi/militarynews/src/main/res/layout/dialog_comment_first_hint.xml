<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_comment_hint_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/comment_hint_person" />

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_bg"
            android:paddingBottom="24dp" >

            <View
                android:id="@+id/dialog_comment_hint_bj_top"
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/comment_hint_bj_top" />

            <TextView
                android:id="@+id/dialog_comment_hint_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_bj_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="@color/article_title"
                android:textSize="20sp" />

            <View
                android:id="@+id/dialog_comment_hint_top_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@+id/dialog_comment_hint_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:background="@color/comment_item_divider" />
            
            <ImageView 
                android:id="@+id/dialog_comment_hint_content_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_top_line"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/comment_hint_pinglun"/>


            <ImageView
                android:id="@+id/dialog_comment_hint_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_content_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:src="@drawable/comment_hint_click" />

            <TextView
                android:id="@+id/dialog_comment_hint_click_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_click"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="点击评论"
                android:textColor="@color/article_content_text"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/dialog_comment_hint_click_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_click_tv"
                android:layout_centerHorizontal="true"
                android:text="可显示菜单、点赞、复制"
                android:textColor="@color/article_content_text"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/dialog_comment_hint_click_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_comment_hint_click_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/comment_hint_button"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="我知道了"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>