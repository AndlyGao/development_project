<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <include
        android:id="@+id/progress_refresh_layout"
        layout="@layout/progress_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/title_bar_layout"
                layout="@layout/title_bar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_system_signin_my_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的金币:10"/>

                <TextView
                    android:id="@+id/task_system_signin_how"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="如何赚钱"/>

                <TextView
                    android:id="@+id/task_system_signin_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/task_system_signin_how"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="签到\n————\n+10金币"/>

                <TextView
                    android:id="@+id/task_system_signin_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/task_system_signin_click"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="已连续签到1天,获得10金币"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/task_system_signin_info"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_system_signin_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1天"/>

                    <TextView
                        android:id="@+id/task_system_signin_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2天"/>

                    <TextView
                        android:id="@+id/task_system_signin_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3天"/>

                    <TextView
                        android:id="@+id/task_system_signin_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4天"/>

                    <TextView
                        android:id="@+id/task_system_signin_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5天"/>

                    <TextView
                        android:id="@+id/task_system_signin_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6天"/>

                    <TextView
                        android:id="@+id/task_system_signin_seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7天"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_system_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="新手任务"/>

                <TextView
                    android:id="@+id/task_system_new_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册账号"/>

                <TextView
                    android:id="@+id/task_system_new_bind_wexin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定微信"/>

                <TextView
                    android:id="@+id/task_system_new_enter_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入好友邀请码"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_system_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="日常任务"/>

                <TextView
                    android:id="@+id/task_system_day_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请收徒"/>

                <TextView
                    android:id="@+id/task_system_day_invite_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享到朋友圈收徒"/>

                <TextView
                    android:id="@+id/task_system_day_invite_weixin_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享到微信群收徒"/>

                <TextView
                    android:id="@+id/task_system_day_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读文章"/>

                <TextView
                    android:id="@+id/task_system_day_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优质评论"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>