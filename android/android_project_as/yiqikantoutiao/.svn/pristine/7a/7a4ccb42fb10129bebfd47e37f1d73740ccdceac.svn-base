<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="114dp"
        android:layout_height="114dp" >

        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_channel_tab_image"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/item_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/column_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/item_channel_tab_image"
                android:background="@drawable/item_title_bg" />

            <TextView
                android:id="@+id/item_channel_tab_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/item_channel_tab_image"
                android:background="@drawable/item_title_bg"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/channel_tab_text"
                android:textSize="16dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_channel_tab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icon" />
    </RelativeLayout>

</LinearLayout>