<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_channel_item_one_big_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/common_item_bg_state_value" >

    <RelativeLayout
        android:id="@+id/item_list_news_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/common_horizontal_margin"
        android:layout_marginRight="@dimen/common_horizontal_margin" >

        <ImageView
            android:id="@+id/item_channel_item_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@color/transparent" />

        <TextView
            android:id="@+id/item_channel_item_title_daily_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_channel_item_image"
            android:background="@drawable/shape_daily_video_title"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/common_item_title_line_space"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="2dp"
            android:text="title"
            android:textColor="?attr/slideview_text_value"
            android:textSize="@dimen/channel_item_title_text_size" />

        <TextView
            android:id="@+id/item_channel_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_channel_item_image"
            android:background="@color/half_transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="title"
            android:textColor="?attr/slideview_text_value"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_channel_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_channel_item_title"
            android:layout_marginRight="@dimen/channel_item_tag_margin_right"
            android:textColor="?attr/article_time_value"
            android:textSize="13sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_channel_item_title"
            android:layout_toRightOf="@id/item_channel_item_tag"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_channel_item_face"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_channel_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/item_summary_color_value"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_channel_item_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/item_channel_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tuijian_shouye_list_aritcle_icon"
                android:drawablePadding="3dp"
                android:text="11"
                android:textColor="?attr/article_time_value"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_channel_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:drawableLeft="@drawable/tuijian_shouye_list_comment_icon"
                android:drawablePadding="3dp"
                android:text="11"
                android:textColor="?attr/article_time_value"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_channel_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_item_divider_height_common"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/channel_item_divider_margin"
        android:layout_marginRight="@dimen/channel_item_divider_margin"
        android:background="?attr/item_divider_color_value" />

</RelativeLayout>