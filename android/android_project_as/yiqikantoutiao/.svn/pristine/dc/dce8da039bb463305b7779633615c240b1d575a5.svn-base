<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?attr/common_bg_white_value"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/poppupwindow_circle_publish_duanping"
        style="@style/SettingChildText"
        android:layout_width="match_parent"
        android:background="?attr/common_item_bg_white_state_value"
        android:drawableLeft="@drawable/duanpin"
        android:drawablePadding="6dp"
        android:text="短评"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?attr/item_divider_color_value" />

    <TextView
        android:id="@+id/poppupwindow_circle_publish_changwen"
        style="@style/SettingChildText"
        android:layout_width="match_parent"
        android:background="?attr/common_item_bg_white_state_value"
        android:drawableLeft="@drawable/changwen"
        android:drawablePadding="6dp"
        android:text="长文"
        android:textSize="16sp" />

</LinearLayout>