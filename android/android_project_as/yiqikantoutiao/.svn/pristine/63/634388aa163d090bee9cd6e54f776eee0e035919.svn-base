<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/dialog_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/dialog_hint_title_view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_hint_title"
        android:layout_marginTop="20dp"
        android:background="@color/home_bottom_txt_sel"
        />

    <TextView
        android:id="@+id/dialog_hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_hint_title_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        />

    <View
        android:id="@+id/dialog_hint_content_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_hint_content"
        android:layout_centerHorizontal="true"
        android:background="@color/line_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_hint_content_view"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dialog_hint_cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="12dp"
        	android:paddingBottom="12dp"
            android:text="取消" 
            android:textSize="16sp"
            />

        <View
            android:id="@+id/dialog_hint_btn_line"
            android:layout_width="1dp"
            android:layout_height="match_parent" 
            android:background="@color/line_gray"
            />

        <TextView
            android:id="@+id/dialog_hint_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="12dp"
        	android:paddingBottom="12dp"
            android:textSize="16sp"
            android:text="确定" />

    </LinearLayout>

</RelativeLayout>
