<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/v_private_info_design_popup_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_private_info_design_title_background"
        android:text="类别"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/v_private_info_design_popup_window"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/v_private_info_design_popup_operation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/v_private_info_design_popup_add"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/select_private_info_tag_add_background"
            android:text="添加"
            android:textColor="#333333"
            android:textSize="14sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/v_private_info_design_popup_delete"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/select_private_info_tag_add_background"
            android:text="删除"
            android:textColor="@drawable/select_private_info_design_popup_delete"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>