<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ada_media_music_main"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_media_video_item_background"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/act_media_music_detail_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_media_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="比比学院-发改委第二批PPP典型案例解析"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/act_media_music_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="2018-3-29 07:30"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="更新"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/act_media_music_detail_study_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="6dp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:drawableLeft="@drawable/ada_media_video_study_img_bg_sel"
                android:textColor="@color/ada_media_video_study_tv_color_sel"
                android:textSize="12sp"
                android:text="ddddddddddddddddddddddddddddddddddddddddd"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/img_media_music_detail_start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4045万"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="播放    "
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/img_media_music_detail_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_media_music_detail_title_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="目录"
                android:textColor="@color/col_title_background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/act_media_music_detail_title_intro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="介绍"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

        </LinearLayout>

        <com.bibinet.biunion.project.ui.custom.MoveLineView
            android:id="@+id/act_media_music_detail_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center" />

        <android.support.v4.view.ViewPager
            android:id="@+id/act_media_music_detail_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>