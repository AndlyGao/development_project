<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/act_member_service_zuanshi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:background="@drawable/select_mem_service_zuanshi"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/act_member_service_zuanshi_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_mem_service_txtcolor"
                    android:text="@string/member_service_zuanshi"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/act_member_service_zuanshi_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="@string/member_service_zuanshi_money"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_member_service_baijin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_mem_service_baijin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/act_member_service_baijin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_mem_service_txtcolor"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/act_member_service_baijin_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_member_service_vip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/select_mem_service_vip">
                <TextView
                    android:id="@+id/act_member_service_vip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_mem_service_txtcolor"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/act_member_service_vip_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_member_service_gaoji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/select_mem_service_gaoji">
                <TextView
                    android:id="@+id/act_member_service_gaoji_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_mem_service_txtcolor"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/act_member_service_gaoji_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_member_service_biaozhun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/select_mem_service_biaozhun">
                <TextView
                    android:id="@+id/act_member_service_biaozhun_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_mem_service_txtcolor"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/act_member_service_biaozhun_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/act_member_service_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>

</LinearLayout>