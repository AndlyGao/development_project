<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bibinet.biunion.project.ui.custom.AdaptImageView
            android:id="@+id/act_media_video_detail_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_media_video_loading" />

        <com.bibinet.biunion.project.ui.custom.AdaptImageView
            android:id="@+id/act_media_video_detail_mask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#85000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_media_video_detail_study_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_title_background"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/act_media_video_detail_start_study_tv"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_media_video_detail_study_background"
                android:gravity="center"
                android:text="开始学习"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_media_video_detail_title_intro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="介绍"
                android:textColor="@color/col_title_background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/act_media_video_detail_title_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="目录"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/act_media_video_detail_title_summary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="概述"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />
        </LinearLayout>

        <com.bibinet.biunion.project.ui.custom.MoveLineView
            android:id="@+id/act_media_video_detail_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center" />

        <android.support.v4.view.ViewPager
            android:id="@+id/act_media_video_detail_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>