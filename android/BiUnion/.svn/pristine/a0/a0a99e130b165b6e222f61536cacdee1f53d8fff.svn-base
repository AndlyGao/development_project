<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_kefu_banner_bg"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/custom_service_kefu"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/custom_service_phone_ll"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:background="@mipmap/custom_service_phone_shadow"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_kefu_phone"
                />
            <TextView
                android:id="@+id/custom_service_phone_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="客服热线"/>
            <TextView
                android:id="@+id/custom_service_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_service_phone_tv1"
                android:text="400-000-0038"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/custom_service_qq1_ll"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@mipmap/custom_service_qq1_shadow">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_kefu_qq1"
                />
            <TextView
                android:id="@+id/custom_service_qq1_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="客服1 QQ"/>
            <TextView
                android:id="@+id/custom_service_qq1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_service_qq1_tv1"
                android:text="1063560011"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/custom_service_qq2_ll"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@mipmap/custom_service_qq2_shadow">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_kefu_qq2" />
            <TextView
                android:id="@+id/custom_service_qq2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="客服2 QQ"/>
            <TextView
                android:id="@+id/custom_service_qq2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_service_qq2_tv2"
                android:text="1063560022"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/custom_service_qq3_ll"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@mipmap/custom_service_qq3_shadow">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_kefu_qq3" />
            <TextView
                android:id="@+id/custom_service_qq3_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="客服3 QQ"/>
            <TextView
                android:id="@+id/custom_service_qq3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_service_qq3_tv3"
                android:text="1063560033"/>
        </RelativeLayout>
    </LinearLayout>


</ScrollView>