<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/act_media_live_record_guide_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/act_media_live_record_guide_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent">
        <ImageView
            android:id="@+id/act_media_live_record_guide_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/common_left_right_margin_space"
            android:layout_marginLeft="@dimen/common_left_right_margin_space"
            android:paddingLeft="@dimen/common_left_right_margin_space"
            android:paddingRight="@dimen/common_left_right_margin_space"
            android:background="@drawable/dizhia">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ditua" />
            <TextView
                android:id="@+id/act_media_live_record_guide_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/act_media_live_record_guide_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:paddingRight="@dimen/common_left_right_margin_space"
            android:paddingTop="@dimen/common_left_right_margin_space"
            android:paddingBottom="@dimen/common_left_right_margin_space"
            android:paddingLeft="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/shanchu"
                />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/act_media_live_record_guide_cover_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/act_media_live_record_guide_cover_camer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:drawableTop="@mipmap/paishe"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="拍摄封面"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/act_media_live_record_guide_cover_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/act_media_live_record_guide_cover_camer"
                android:drawableTop="@mipmap/xuanzfm"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="选择封面"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/act_media_live_record_guide_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/common_left_right_margin_space"
            android:paddingLeft="@dimen/common_left_right_margin_space"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播标题"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/act_media_live_record_guide_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dizhia"
                android:layout_marginTop="12dp"
                android:hint="请输入直播标题"
                android:maxLength="20"
                android:paddingLeft="@dimen/common_left_right_margin_space"
                android:paddingRight="@dimen/common_left_right_margin_space"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:textColorHint="@color/color_999999"
                android:textSize="17sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/act_media_live_record_guide_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/act_media_live_guide_next_tv_color_sel"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/common_left_right_margin_space"
            android:layout_marginRight="@dimen/common_left_right_margin_space"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/common_left_right_margin_space"
            android:paddingRight="@dimen/common_left_right_margin_space"
            android:background="@drawable/dizhia"
            android:text="下一步"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/act_media_live_record_guide_start"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/common_left_right_margin_space"
            android:layout_marginRight="@dimen/common_left_right_margin_space"
            android:background="@drawable/kaishi"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="开始直播"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <include
        android:id="@+id/act_media_live_record_layout"
        layout="@layout/activity_media_live_record"
        android:visibility="gone"/>

</RelativeLayout>
