<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f9f9f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fra_media_music_detail_list_play_all_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/img_media_music_detail_all_play" />

        <TextView
            android:id="@+id/fra_media_music_detail_list_play_all_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="全部播放"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/fra_media_music_detail_list_order"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/select_magazine_top_order" />

            <TextView
                android:visibility="gone"
                android:id="@+id/fra_media_music_detail_list_order_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="正序"
                android:textColor="@color/color_666666"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fra_media_music_detail_list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>