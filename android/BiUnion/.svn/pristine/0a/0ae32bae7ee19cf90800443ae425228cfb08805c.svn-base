<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="公司名称："
            android:textSize="13sp"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_company_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的公司名称"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="电子邮箱："
            android:textSize="13sp"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的电子邮箱"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="13sp"
            android:text="联系人："
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="13sp"
            android:text="职位："
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的职位"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="13sp"
            android:text="手机号："
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="验证码："
            android:textSize="13sp"
            android:textColor="#333333" />


        <EditText
            android:id="@+id/act_register_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <Button
            android:id="@+id/act_register_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:textSize="13sp"
            android:text="获取验证码"
            android:textColor="@drawable/select_get_code" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />
    <!--    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="选填"/>-->
    <!--  <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="#d9d9d9"
          />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dim_register_left_width"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="13sp"
            android:text="密码："
            android:textColor="#333333" />

        <EditText
            android:id="@+id/act_register_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码（字母，数字，至少6位）"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/act_register_show_password"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/select_show_password"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d9d9d9" />

    <Button
        android:id="@+id/act_register_confirm"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/select_confirm_btn_background"
        android:text="完成注册"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>