<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/v_title_background"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/col_title_background">

        <TextView
            android:gravity="center"
            android:id="@+id/v_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_title_txt" />

        <ImageView
            android:id="@+id/v_title_select_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/v_title_txt"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/select_message_type_select_icon" />
        <RelativeLayout
            android:id="@+id/v_title_right_main"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/v_title_right_main_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/v_title_right_main_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:text="注册"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/v_title_right_second_main"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/v_title_right_main"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/v_title_right_second_main_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible" />

            <TextView
                android:id="@+id/v_title_right_second_main_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="注册"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/v_title_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="9dp"
            android:src="@mipmap/img_exit"
            android:visibility="visible" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/v_title_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>