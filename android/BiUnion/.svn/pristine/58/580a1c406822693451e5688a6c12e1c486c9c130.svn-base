<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_magazine_main_background"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/ada_magazine_main1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/act_magazine_main_img1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_magazine_main_img_background"
                    android:padding="1dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/ada_magazine_main_reading1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/img_magazine_reading" />
            </RelativeLayout>

            <TextView
                android:id="@+id/act_magazine_main_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="第15期"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ada_magazine_main2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/act_magazine_main_img2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_magazine_main_img_background"
                    android:padding="1dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/img_magazine_reading"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/act_magazine_main_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="第15期"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ada_magazine_main3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/act_magazine_main_img3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_magazine_main_img_background"
                    android:padding="1dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/img_magazine_reading"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/act_magazine_main_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="第15期"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

