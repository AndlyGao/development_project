<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ada_media_live_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="6dp"
    android:paddingBottom="6dp"
    >
    <ImageView
        android:id="@+id/ada_media_live_item_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/ada_media_live_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ada_media_live_item_cover"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />
    <View
        android:id="@+id/ada_media_live_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ada_media_live_item_title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#eeeeee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ada_media_live_item_line">
        <ImageView
            android:id="@+id/ada_media_live_item_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/ada_media_live_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/color_666666"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>